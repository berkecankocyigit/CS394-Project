<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.loginPage">

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-300dp"
        android:layout_marginLeft="-110dp"
        android:text="Log in"
        android:fontFamily="@font/garet_heavy"
        android:textSize="40sp"
        android:textColor="@color/light_gray"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="-175dp"
        android:background="@drawable/rounded_rectangle_edittext"
        android:hint="  Email"
        android:textColorHint="@color/light_gray"
        android:padding="12dp"
        android:textColor="@color/light_gray"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="-70dp"
        android:background="@drawable/rounded_rectangle_edittext"
        android:hint="  Password"
        android:textColorHint="@color/light_gray"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/light_gray"
        android:textSize="18sp" />

    <Button

        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/rounded_rectangle_button"
        android:fontFamily="@font/garet_book"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/dontHaveAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/garet_book"
        android:text="Don't have an account?"
        android:textColor="@color/light_gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="14dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/garet_heavy"
        android:text="Sign Up"
        android:textColor="@color/light_gray"
        android:textSize="18sp" />

</FrameLayout>